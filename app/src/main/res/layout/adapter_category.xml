<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:id="@+id/bookCard">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemTextView"
        android:textColor="@color/colorSecondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_view_padding_vertical"
        android:paddingBottom="@dimen/list_view_padding_vertical"
        android:paddingLeft="@dimen/list_view_padding_vertical"
        android:paddingRight="@dimen/list_view_padding_vertical"
        android:text="item"/>

</android.support.v7.widget.CardView>
