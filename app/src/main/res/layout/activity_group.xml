<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="false"
    android:fillViewport="true"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:nestedScrollingEnabled="false"
    android:measureAllChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        android:measureWithLargestChild="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_castor_image"
            android:maxHeight="110dp"
            android:maxWidth="110dp"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/image_padding"
            android:paddingBottom="@dimen/image_padding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView8"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:paddingTop="@dimen/text_padding_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v 1.5"
            android:id="@+id/textView11"
            android:textAlignment="center"
            android:paddingBottom="@dimen/text_padding_vertical"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desarrollo para Plataformas MÃ³viles, EPE - UPC"
            android:id="@+id/textView9"
            android:paddingBottom="@dimen/text_padding_vertical"
            android:paddingTop="@dimen/text_padding_vertical"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Integrantes"
            android:id="@+id/textView12"
            android:textSize="@dimen/text_size"
            android:paddingTop="@dimen/text_padding_vertical"
            android:paddingBottom="@dimen/text_padding_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/groupListView"
            android:paddingTop="@dimen/text_padding_vertical"
            android:paddingBottom="@dimen/text_padding_vertical"
            android:nestedScrollingEnabled="true" />

    </LinearLayout>

</ScrollView>